extends base.pug

block scripts
  script(src='/static/index.js')
  //- script(src='/static/extra.js')
  

block style 
    style
      include  ../static/stylehome.css 
      include  ../static/stylecontact.css 

block content  
    div.container
        h2 &#9743 CONTACT US &#9743
        form(action="/contact" method="post" ,class="MyForm") 
            input(type="text", name="name",class="Myinput" ,placeholder = "Enter your name:")
            input(type="phone", name="phone",class="Myinput" ,placeholder = "Enter your phone number:")
            input(type="email", name="email",class="Myinput" ,placeholder = "Enter your email:")
            input(type="address", name="address",class="Myinput" ,placeholder = "Enter your address:")
            input(type="desc", name="desc",class="Myinput" ,placeholder = "Enter your desc:")
            button(class="btn")
               | submit
